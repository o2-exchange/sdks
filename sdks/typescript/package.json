{
  "name": "o2-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for the O2 Exchange â€” a fully on-chain order book DEX on the Fuel Network",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --grep integration",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src tests examples && tsc --noEmit",
    "format": "biome format --write src tests examples",
    "format:check": "biome ci --linter-enabled=false --assist-enabled=false src tests examples"
  },
  "dependencies": {
    "@noble/secp256k1": "^3.0.0",
    "@noble/hashes": "^2.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@types/ws": "^8.5.13",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "Apache-2.0"
}
